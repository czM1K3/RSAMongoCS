<UserControl x:Class="Mongo.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Mongo"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="100">
    <Grid>
        <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1">
            <Grid>
                <Label Name="lblNickname">Text</Label>
                <Button Name="btnGet" HorizontalAlignment="Right" VerticalAlignment="Top" Width="40" Height="25" Margin="0,0,52,0" Click="BtnGet_OnClick">Get</Button>
                <Button Name="btnDelete" HorizontalAlignment="Right" VerticalAlignment="Top" Width="50" Height="25" Click="BtnDelete_OnClick">Delete</Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
