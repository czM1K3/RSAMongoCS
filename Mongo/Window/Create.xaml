<Window x:Class="Mongo.Create"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Mongo"
        mc:Ignorable="d"
        Title="Create" Height="125" Width="400" ResizeMode="NoResize">
    <Grid>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,0,0,0">Message</Label>
        <TextBox Name="tbMessage" Width="300" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,2,0,0"></TextBox>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5, 25,0,0">Nickname</Label>
        <TextBox Name="tbNickname" Width="300" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="80, 27,0,0"></TextBox>
        <Button Name="btnSend" Width="50" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="330, 55,0,0" Click="BtnSend_OnClick">Send</Button>
    </Grid>
</Window>
